{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --no-cache-dir --retries 5 --timeout 300 -r simple_requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn app_simple:app --bind 0.0.0.0:$PORT --workers 1 --timeout 120 --keep-alive 2",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}